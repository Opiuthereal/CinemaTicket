<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:elevation="8dp"
    tools:context=".FragmentTicketReservation">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/croix_fragment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/croix"
        android:layout_gravity="left"
        android:layout_marginTop="25sp"/>

    <TextView
        android:id="@+id/jourFilmTicket"
        android:text="jeudi 01 mai"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/heureFilmTicket"
        android:text="14:00"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/vostHoraire1Film"
        android:text="VF"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cinemaSelection"
        android:text="Pathé Palace"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/recapFilm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#80595050">

        <TextView
            android:id="@+id/titreFilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Le Comte de Monte Cristo"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/dureeSortieFilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durée :"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/titreFilm"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/dureeSortieFilmBdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h18"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_below="@id/titreFilm"
            android:layout_toEndOf="@id/dureeSortieFilm"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ImageFilmResumeTicket"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:alpha="0.7"
            android:scaleType="centerCrop"
            android:src="@drawable/montecristoback"
            android:layout_below="@id/dureeSortieFilmBdd"/>

        <Button
            android:id="@+id/validationTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ImageFilmResumeTicket"
            android:layout_centerHorizontal="true"
            android:text="VALIDER MON TICKET"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:backgroundTint="@color/yellow" />


    </RelativeLayout>
</LinearLayout>
