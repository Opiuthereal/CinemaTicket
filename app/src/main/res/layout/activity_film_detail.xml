<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:background="@drawable/gradient_background"
    tools:context=".FilmDetail"
    android:id="@+id/Main2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <FrameLayout
                android:id="@+id/videoContainer"
                android:layout_width="0dp"
                android:layout_height="250dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ImageFilmAvantVideo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/montecristoback" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/boutonPlay"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:alpha="0.4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bouton_play"
                    android:layout_gravity="center" />

                <VideoView
                    android:id="@+id/videoViewBandeAnnonce"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/croix_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:alpha="0.8"
                    android:scaleType="centerCrop"
                    android:src="@drawable/croix_retour"
                    android:layout_gravity="left"
                    android:layout_marginTop="25sp"/>

            </FrameLayout>

            <TextView
                android:id="@+id/titre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/videoContainer"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/noteFilm"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="note du film"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:padding="10dp"
                android:background="#80000000"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/titre"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/dureeFilm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="durée"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/noteFilm"
                app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/genreFilm"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="genre"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/noteFilm"
        app:layout_constraintStart_toEndOf="@id/dureeFilm"
        android:layout_marginTop="30dp" />

    <!-- Age Restriction -->
    <ImageView
        android:id="@+id/ageRestrictionDetail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/noteFilm"
        app:layout_constraintStart_toEndOf="@id/genreFilm"
        />

            <TextView
                android:id="@+id/dateSortieFilm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sortie : "
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/dureeFilm"
                app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/dateSortieFilmBdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date de la sortie"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toEndOf="@id/dateSortieFilm"
        app:layout_constraintTop_toBottomOf="@id/dureeFilm"
        android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/faitPar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/dateSortieFilmBdd"
                app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/auteurs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="nom de l'auteur"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toEndOf="@id/faitPar"
        app:layout_constraintTop_toBottomOf="@id/dateSortieFilmBdd"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/avec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="avec"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toEndOf="@id/auteurs"
        app:layout_constraintTop_toBottomOf="@id/dateSortieFilmBdd"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/acteurs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="nom de l'acteur"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toEndOf="@id/avec"
        app:layout_constraintTop_toBottomOf="@id/dateSortieFilmBdd"
        android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/resumeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Infos et détails  ▶"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/acteurs"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/resumeFilm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Victime d’un complot, le jeune Edmond Dantès est arrêté le jour de son mariage pour un crime qu’il n’a pas commis. Après quatorze ans de détention au château d’If, il parvient à s’évader. Devenu immensément riche, il revient sous l’identité du comte de Monte-Cristo pour se venger des trois hommes qui l’ont trahi."
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/resumeButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:layout_marginTop="30sp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/resumeFilm"/>

            <FrameLayout
                android:id="@+id/joursFilm"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/white"
                android:elevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/resumeFilm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/horairesFilm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Horaires"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/joursFilm"
                app:layout_constraintStart_toStartOf="parent" />


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerViewHoraire"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/horairesFilm"
                    android:orientation="horizontal"/>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentTicketReservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewHoraire"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</RelativeLayout>
