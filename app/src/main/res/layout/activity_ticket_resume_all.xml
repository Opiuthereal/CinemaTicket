<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".TicketResumeAll">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Logo -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cineLogo"
            android:layout_width="250dp"
            android:layout_height="120dp"
            android:alpha="0.8"
            android:scaleType="centerCrop"
            android:src="@drawable/cine_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Croix -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/croix_image_infos_total"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/croix"
            android:contentDescription="Fermer"
            app:shapeAppearanceOverlay="@style/RoundedImageStyle"
            android:backgroundTint="#22FFFFFF"
            app:layout_constraintTop_toTopOf="@id/cineLogo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" />

        <!-- Titre -->
        <TextView
            android:id="@+id/resumeTicketTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Résumé de votre ticket"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/cineLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />


        <TextView
            android:id="@+id/cineFinal"
            style="@style/ModernInfoText"
            android:text="Nom du cinéma"
            app:layout_constraintTop_toBottomOf="@id/resumeTicketTxt" />

        <TextView
            android:id="@+id/titreFilmFinal"
            style="@style/ModernInfoText"
            android:text="Nom du Film"
            app:layout_constraintTop_toBottomOf="@id/cineFinal" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ImageFilmResumeTicket"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/montecristoback"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImageStyle"
            app:layout_constraintTop_toBottomOf="@id/titreFilmFinal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/jourFinal"
            style="@style/ModernInfoText"
            android:text="jour du Film"
            app:layout_constraintTop_toTopOf="@id/ImageFilmResumeTicket"
            app:layout_constraintStart_toEndOf="@id/ImageFilmResumeTicket"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/heureFinal"
            style="@style/ModernInfoText"
            android:text="heure du Film"
            app:layout_constraintTop_toBottomOf="@id/jourFinal"
            app:layout_constraintStart_toStartOf="@id/jourFinal" />

        <TextView
            android:id="@+id/tyoeDiffusionFinal"
            style="@style/ModernInfoText"
            android:text="type de diffusion"
            app:layout_constraintTop_toBottomOf="@id/heureFinal"
            app:layout_constraintStart_toStartOf="@id/jourFinal" />


        <TextView android:id="@+id/nbPlacesFinal" style="@style/ModernInfoCenteredText" android:text="Nombre de places prises" app:layout_constraintTop_toBottomOf="@id/ImageFilmResumeTicket" />
        <TextView android:id="@+id/positionsPlacesFinal" style="@style/ModernInfoCenteredText" android:text="Position des places" app:layout_constraintTop_toBottomOf="@id/nbPlacesFinal" />
        <TextView android:id="@+id/prixFinal" style="@style/ModernInfoCenteredText" android:text="Prix final de toutes les places" app:layout_constraintTop_toBottomOf="@id/positionsPlacesFinal" />
        <TextView android:id="@+id/nomUserFinal" style="@style/ModernInfoCenteredText" android:text="Nom de l'utilisateur" app:layout_constraintTop_toBottomOf="@id/prixFinal" />
        <TextView android:id="@+id/prenomUserFinal" style="@style/ModernInfoCenteredText" android:text="Prénom de l'utilisateur" app:layout_constraintTop_toBottomOf="@id/nomUserFinal" />
        <TextView android:id="@+id/emailUserFinal" style="@style/ModernInfoCenteredText" android:text="Email de l'utilisateur" app:layout_constraintTop_toBottomOf="@id/prenomUserFinal" />

        <ImageView
            android:id="@+id/qrCodeImageView"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginTop="16dp"
            android:contentDescription="QR Code"
            app:layout_constraintTop_toBottomOf="@id/emailUserFinal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <CheckBox
            android:id="@+id/saveTicketCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enregistrer le ticket"
            android:textColor="@android:color/white"
            android:buttonTint="@color/yellow"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/qrCodeImageView"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/validerButtonConfirmer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CONFIRMER ET PAYER"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/yellow"
            app:cornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/saveTicketCheckBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
