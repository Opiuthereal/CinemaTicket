<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationPlaces">

    <TextView
        android:id="@+id/prenezVosPlacesTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Séléctionnez vos places"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/separationHaut"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:alpha="0.6"
        android:layout_below="@id/prenezVosPlacesTxt"/>

    <!-- GridView -->
    <GridView
        android:id="@+id/grillePlaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="12"
        android:columnWidth="40dp"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:padding="0dp"
        android:clipToPadding="false"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@id/separationHaut"/>


    <!-- Premier View (à gauche) -->
    <View
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:background="@color/yellow"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/grillePlaces" />

    <!-- TextView centré entre les deux lignes -->
    <TextView
        android:id="@+id/ecranOuf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ecran"
        android:textColor="@color/yellow"
        android:textSize="18sp"
        android:layout_marginTop="37dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/grillePlaces" />

    <!-- Deuxième View (aligné à droite) -->
    <View
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:background="@color/yellow"
        android:layout_marginTop="50dp"
        android:layout_marginRight="3dp"
        android:layout_below="@id/grillePlaces"
        android:layout_alignParentEnd="true" />

    <!-- Séparateur sous le GridView -->
    <View
        android:id="@+id/separationBas"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:alpha="0.6"
        android:layout_below="@id/ecranOuf"/>

    <!-- Image du doigt -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/doigt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/doigt"
        android:layout_below="@id/separationBas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/doigtSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Touchez pour séléctionner votre siège"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/doigt" />

    <TextView
        android:id="@+id/legende"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Légende"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/doigtSelection" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/legende"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="3dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siegeJauneLegende"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/siege_jaune"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/legendeJaune"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Libres"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siegeVertLegende"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/siege_vert"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/legendeVert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Séléctionnées"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siegeGrisLegende"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/siege_gris"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/legendeGris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indisponibles"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"/>

    </LinearLayout>



</RelativeLayout>
